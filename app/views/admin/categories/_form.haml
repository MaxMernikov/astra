= form_for([:admin, @category], html: { class: 'uk-form uk-form-horizontal' }) do |f|
  - if @category.errors.any?
    = render '/admin/partials/form_errors', f: f

  %fieldset
    %legend
      .uk-form-row
        = f.label :title, class: 'uk-form-label'
        .uk-form-controls
          = f.text_field :title, class: 'uk-width-1-2'

      .uk-form-row
        = f.label :slug, class: 'uk-form-label'
        .uk-form-controls
          = f.text_field :slug, class: 'uk-width-1-2'

      .uk-form-row
        = f.label :show, class: 'uk-form-label'
        .uk-form-controls
          = f.check_box :show, class: 'uk-width-1-2'

      .uk-form-row
        .uk-width-1-2.uk-container-center.uk-margin
          = f.submit 'Сохранить', class: 'uk-button uk-button-large uk-button-success'
          = link_to 'Назад', admin_categories_path, class: 'uk-button uk-button-large'
