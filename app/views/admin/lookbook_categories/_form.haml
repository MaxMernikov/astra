.row
  .col-xs-8.col-xs-offset-2
    = form_for([:admin, resource], html: {role: 'form'}) do |f|
      - if resource.errors.present?
        = render 'errors', errors: resource.errors

      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'

      .form-group
        = f.label :overview
        = f.text_area :overview, class: 'form-control'

      .form-group
        .row
          .col-xs-8
            = f.label :image
            = f.file_field :image
          .col-xs-4
            - if f.object.image.present?
              = image_tag f.object.image.url, class: 'pull-right img-responsive'

      .form-group
        = f.label :show
        = f.check_box :show


      .form-group
        = f.submit 'Сохранить', class: 'btn btn-success'