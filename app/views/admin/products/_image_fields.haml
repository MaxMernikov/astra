.nested-fields
  .form-group
    .row
      .col-xs-6
        = f.label :image
        = f.file_field :image
      .col-xs-4
        - if f.object.image.present?
          = image_tag f.object.image(:preview), class: 'pull-right img-responsive'

      = link_to_remove_association "remove image", f, class: 'uk-width-1-4'
  %hr