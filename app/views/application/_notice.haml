#order_success.dialog
  .dialog__overlay
  .dialog__content
    .morph-shape
      %svg{:height => "100%", :preserveaspectratio => "none", :viewbox => "0 0 560 280", :width => "100%", :xmlns => "http://www.w3.org/2000/svg"}
        %rect{:fill => "none", :height => "276", :width => "556", :x => "3", :y => "3"}
    .dialog-inner
      .motion-right
        .about-text= flash[:notice][:title]
        .hint.about-text.mb-32= raw flash[:notice][:body]

      .motion-left
        %button.button.small.action.mb-32{"data-dialog-close" => ""} Закрыть

:javascript
  (function() {
    order_success = new DialogFx( order_success );
    order_success.toggle.bind(order_success).call()
  })();
