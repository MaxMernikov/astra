!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name: "viewport"}/

    %title Astra Admin
    = display_meta_tags noindex: true

    - if params[:controller] == 'admin/instagram'
      = stylesheet_link_tag    "admin_v2", media: "all"
      = javascript_include_tag "admin_v2"
    - else
      = stylesheet_link_tag    "admin", media: "all"
      = javascript_include_tag "admin"

    = csrf_meta_tags
  %body
    - if current_admin
      = render 'admin/partials/header'
    .container
      = yield
