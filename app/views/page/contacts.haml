              = image_tag('https://igcdn-photos-a-a.akamaihd.net/hphotos-ak-xaf1/t51.2885-15/11078808_749504715148408_50717721_n.jpg', class: 'instagram-image')
          .w-col.w-col-4.w-col-small-4.w-col-tiny-4
            = link_to 'https://instagram.com/astra_minsk/', target: '_blank', class: 'w-inline-block' do
              = image_tag('https://igcdn-photos-d-a.akamaihd.net/hphotos-ak-xfa1/t51.2885-15/11085017_1618528531717835_1927027145_n.jpg', class: 'instagram-image')
          .w-col.w-col-4.w-col-small-4.w-col-tiny-4
            = link_to 'https://instagram.com/astra_minsk/', target: '_blank', class: 'w-inline-block' do
              = image_tag('https://igcdn-photos-c-a.akamaihd.net/hphotos-ak-xfa1/t51.2885-15/11049158_787115058031162_957470114_n.jpg', class: 'instagram-image')
