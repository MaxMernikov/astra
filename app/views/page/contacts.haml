      .w-col.w-col-5.w-col-small-5.contact-block.contact-title.top-line
        %div Группа в ВКонтакте
      .w-col.w-col-7.w-col-small-7.contact-block.left-line.top-line
        %div
          = link_to 'astra.minsk', 'https://vk.com/astra.minsk', target: '_blank', class: 'link'

        .mt-12
          = render 'page/contacts/vk_post'
