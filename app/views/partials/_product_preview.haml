= link_to product, class: "w-inline-block text-center product-block #{product.title.underscore.gsub(' ', '-')}" do
  = image_tag(product.first_image, title: astra_tag("#{product.category.title} #{product.title}"), alt: astra_tag("#{product.category.title} #{product.title}"))
  .product-details-contaner.mb-32
    %h3.product-title
      %span.product-category= product.category.title
      %br
      = product.title
    .product-cost= product_cost(product.cost)