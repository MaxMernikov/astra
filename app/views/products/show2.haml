.row
  .col-xs-12.col-sm-6.col-sm-offset-3.text-center.about-product
    - if @product.description.present?
      = @product.description
    - else
      = @product.category.detail_product

.row
  - if @product.images.count == 3
    - @product.images.each do |image|
      = image_tag(image.image(:preview), class: 'col-xs-12 col-sm-4', title: astra_tag(@product.title), alt: astra_tag(@product.title))

  - elsif @product.images.count == 2
    - @product.images.each_with_index do |image, index|
      = image_tag(image.image(:preview), class: "col-xs-12 col-sm-4 #{ index == 0 ? 'col-sm-offset-2' : '' }", title: astra_tag(@product.title), alt: astra_tag(@product.title))

.row
  .col-xs-12.tac
    .share_block
      .share_hint Share:
      = render 'share'

#buy_it.row
  #buy_it_button.col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.buy_it
    .thumbnail
      %h4.buy.text-center.uk-text-ultra-slim
        Купить #{@product.category.dative}
      %p.tac
        за
        %span= @product.cost
        тысяч рублей

  #buy_it_content.col-xs-12.col-sm-10.col-sm-offset-1.col-md-6.col-md-offset-3
    = render 'order_form'

- if @product.about_product.present?
  .row.product-details
    = image_tag @product.images.first.image(:preview), class: 'col-sm-4 hidden-xs', title: astra_tag(@product.title), alt: astra_tag(@product.title)

    .col-xs-12.col-sm-8
